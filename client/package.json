{
  "name": "@gospa/client",
  "version": "0.1.3",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/runtime.js",
      "types": "./dist/runtime.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "build": "bun build ./src/runtime.ts ./src/runtime-simple.ts ./src/runtime-core.ts ./src/runtime-micro.ts --outdir ./dist --target browser --minify --splitting --format esm",
    "build:embed": "bun run build && cp -r ./dist/* ../embed/",
    "build:empty": "rm -r ../embed/*.js && bun run build:embed"
  },
  "devDependencies": {
    "@types/dompurify": "^3.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "dompurify": "^3.3.1"
  }
}